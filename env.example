# OpenManus Java 环境配置示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# LLM API 配置
# ===========================================

# 阿里云百炼 API 密钥
OPENMANUS_LLM_API_KEY=your-dashscope-api-key-here

# LLM 模型配置
OPENMANUS_LLM_MODEL=qwen-plus
OPENMANUS_LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1/
OPENMANUS_LLM_MAX_TOKENS=8192
OPENMANUS_LLM_TEMPERATURE=0.7

# ===========================================
# 应用配置
# ===========================================

# 应用运行环境 (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# 应用端口
SERVER_PORT=8080

# 日志级别
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_OPENMANUS=DEBUG

# ===========================================
# Docker 沙箱配置
# ===========================================

# Docker 镜像
OPENMANUS_SANDBOX_IMAGE=python:3.11-slim

# 资源限制
OPENMANUS_SANDBOX_MEMORY_LIMIT=512m
OPENMANUS_SANDBOX_CPU_LIMIT=1.0
OPENMANUS_SANDBOX_TIMEOUT=120

# 网络配置
OPENMANUS_SANDBOX_NETWORK_ENABLED=true

# ===========================================
# 安全配置
# ===========================================

# 工作空间根目录
OPENMANUS_APP_WORKSPACE_ROOT=./workspace

# 是否启用沙箱模式
OPENMANUS_SANDBOX_USE_SANDBOX=true

# ===========================================
# 搜索配置
# ===========================================

# 搜索引擎类型 (google, bing, duckduckgo)
OPENMANUS_SEARCH_ENGINE=google

# 搜索 API 密钥 (如果需要)
OPENMANUS_SEARCH_API_KEY=your-search-api-key-here

# 最大搜索结果数
OPENMANUS_SEARCH_MAX_RESULTS=10

# ===========================================
# 浏览器配置
# ===========================================

# 浏览器类型 (chrome, firefox)
OPENMANUS_BROWSER_TYPE=chrome

# 是否无头模式
OPENMANUS_BROWSER_HEADLESS=true

# 浏览器超时时间
OPENMANUS_BROWSER_TIMEOUT=30

# ===========================================
# 代理配置（如果需要）
# ===========================================

# 是否启用代理
OPENMANUS_PROXY_ENABLED=false

# HTTP 代理
OPENMANUS_PROXY_HTTP_PROXY=

# HTTPS 代理
OPENMANUS_PROXY_HTTPS_PROXY=

# ===========================================
# 监控和健康检查
# ===========================================

# 是否启用 Actuator 端点
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# 健康检查端口
MANAGEMENT_SERVER_PORT=8081

# ===========================================
# 数据库配置（如果使用）
# ===========================================

# 数据库 URL（H2 示例）
# SPRING_DATASOURCE_URL=jdbc:h2:mem:testdb
# SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.h2.Driver
# SPRING_DATASOURCE_USERNAME=sa
# SPRING_DATASOURCE_PASSWORD=

# ===========================================
# 外部服务集成
# ===========================================

# MCP 配置
OPENMANUS_MCP_ENABLED=false

# RunFlow 配置
OPENMANUS_RUNFLOW_ENABLED=false
OPENMANUS_RUNFLOW_MAX_STEPS=20
OPENMANUS_RUNFLOW_TIMEOUT=300

# ===========================================
# 开发和调试
# ===========================================

# 是否启用开发工具
SPRING_DEVTOOLS_RESTART_ENABLED=true

# 是否启用远程调试
JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005 